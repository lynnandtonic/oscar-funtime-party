// ==========================================================================
// Navigation
// ==========================================================================

.nav-main
  height: 100vh
  width: $nav-width
  position: fixed
  display: flex
  flex-direction: column
  background-color: goldenrod
  font-size: 14px
  color: white

.user
  padding: 30px 15px
  text-align: center

.user-avatar
  width: 60px
  margin-bottom: 5px
  border-radius: 50%
  border: 3px solid white
  box-shadow: 2px 2px 3px black(.2)

.nav-item
  padding: 7px
  display: block
  text-align: center
  color: white
  
  &.active
    background: white(.4)
    color: black
    
  &:not(.active):hover
    background: white(.2)
  
  &:last-child
    margin-bottom: 15px

.site-title
  padding: 20px
  display: flex
  flex-direction: column
  justify-content: flex-end
  flex-grow: 2
  background-image: linear-gradient(135deg, transparent 40%,
                                            mediumvioletred(.2) 41%,
                                            mediumvioletred(.2) 45%,
                                            mediumvioletred(.4) 46%,
                                            mediumvioletred(.4) 50%,
                                            mediumvioletred(.6) 51%,
                                            mediumvioletred(.6) 55%,
                                            mediumvioletred(.8) 56%,
                                            mediumvioletred(.8) 60%,
                                            mediumvioletred     61%)
  font-size: 24px
  text-align: right